<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes" /> -->
    <meta name="viewport" content="user-scalable=no" />
    <meta name="theme-color" content="#000000"/>
    <title>The Watcher</title>
    <link rel="icon" href="img/favicon.png">
    <link rel="stylesheet" href="css/main.css">
    <script src="https://hammerjs.github.io/dist/hammer.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.js"></script>
    <script src="js/screenfull.js"></script>
  </head>
  <body id="view">
    
    <audio id="voiceAudio">
      <source src="sounds/voice/intro.mp3" type="audio/mpeg">
      Your browser does not support the audio element.
    </audio>
    
    <audio id="effectAudio">
      <source src="sounds/ding.mp3" type="audio/mpeg">
      Your browser does not support the audio element.
    </audio>
    
    <div class="walk-btn" id="walkBtn">
      <button id="walkBtnb" class="button">Walk One Step</button>
    </div>
    
    <div id="makeFull">full</div>
    <section class="timeline">
      <img src="img/icons/sun.svg">
      <div id="timelineNodes" class="markers">
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
          <div></div>
      </div>
      <img src="img/icons/moon.svg">
    </section>
    
    <section id="theMain" class="start">
      <div class="logo">
        <img src="img/logo-text.svg">
      </div>
      
      <img class="step-info" src="img/art/footsteps.svg">
      
      <p>Ensure both feet are on the sidewalk, feet spaced evenly apart.</p>
      
      <div class="city-back">
        <img src="img/art/city.svg">
        <video id="introVid" mute autoplay="autoplay" loop>
          <source src="img/art/cityintro.mp4" type="video/mp4"></source>
        </video>
      </div>
      
      <button id="startAll" type="button" class="button large start-btn">Start</button>
      
    </section>
    
    <script src="js/main.js" charset="utf-8"></script>
  </body>
</html>
